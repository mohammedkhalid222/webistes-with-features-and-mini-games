<!--calculator making-->
<h2>Simple Js Calculator</h2>
<div class="all">


    <form name="form">
        <input class="textview" name="textview" placeholder="0">
    </form>

    <table>
        <tr>
            <th><button class="button" type="button" id="Clear" name="clear" value="" onclick="c()">C</button></th>
            <th><button class="button"  type="button" name="(" value="(" onclick="myfunction('(')">(</button></th>
            <th><button  class="button" type="button" name=")" value=")" onclick="myfunction(')')">)</button></th>
            <th><button  class="button" type="button" name="/" value="/" onclick="myfunction('/')">/</button></th>
        </tr>
        <tr>
            <th><button  class="button" type="button" name="7" value="7"  onclick="myfunction(7)">7</button></th>
            <th><button  class="button" type="button" name="8" value="8" onclick="myfunction(8)">8</button></th>
            <th><button  class="button" type="button" name="9" value="9"  onclick="myfunction(9)">9</button></th>
            <th><button  class="button" type="button" name="*"value="*" onclick="myfunction('*')">x</button></th>
        </tr>
        <tr>
            <th><button  class="button" type="button" name="4" value="4" onclick="myfunction(4)">4</button></th>
            <th><button  class="button" type="button" name="5" value="5" onclick="myfunction(5)">5</button></th>
            <th><button  class="button" type="button" name="6"value="6" onclick="myfunction(6)">6</button></th>
            <th><button  class="button" id="minus" type="button" name="-" value="-" onclick="myfunction('-')">_</button></th>
        </tr>
        <tr>
            <th><button  class="button" type="button" name="1" value="1" onclick="myfunction(1)">1</button></th>
            <th><button  class="button" type="button" name="2" value="2" onclick="myfunction(2)">2</button></th>
            <th><button  class="button" type="button" name="3" value="3" onclick="myfunction(3)">3</button></th>
            <th><button  class="button" type="button" name="+" value="+" onclick="myfunction('+')">+</button></th>
        </tr>
        <tr class="last">
            <th><button  class="button" type="button" name="0" value="0" onclick="myfunction(0)">0</button></th>
            <th><button  class="button" type="button" name="." value="." onclick="myfunction('.')">.</button></th>
            <th><button  class="button" type="button" name="%" value="=" onclick="percent()">%</button></th>
            <th><button  class="button" type="button" id="equal" name="=" value="=" onclick="equal()">=</button></th>

        </tr>

    </table>

</div>


</body>
