    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!--specific charset-->
    <meta charset="utf-8">

    <title>calculator</title>
    <!--page css styling-->
    <link rel="stylesheet" type="text/css" href="/static/try.css"/>



    <link rel="stylesheet" href="/static/calculator.css">
    <!--js functions-->
    <script>
        function myfunction(num) {
            document.form.textview.value=  document.form.textview.value + num
        }
        function equal() {
            var x = document.form.textview.value;
            if (x) {
                document.form.textview.value = eval(x) }
        }
        function c(){
            document.form.textview.value = "" ;
        }
        function percent() {
            var n = document.form.textview.value;
            if (n) {
                document.form.textview.value = eval(n) / 100 }
        }

    </script>

</head>
